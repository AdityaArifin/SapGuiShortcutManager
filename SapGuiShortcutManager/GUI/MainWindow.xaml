<Window x:Class="SapGuiShortcutManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SapGuiShortcutManager.GUI"
        mc:Ignorable="d"
        Title="SAP GUI Shortcut Manager" Height="495" Width="800">
    <Grid>
        <TabControl x:Name="mMainTab" 
                    Grid.Row="0">
            <TabItem Header="Home">
                <local:Panel x:Name="mPanel"></local:Panel>
            </TabItem>
        </TabControl>
        <Button x:Name="mLogonButton" 
                Grid.Row="1"
                Height="30"
                Width="100"
                Content="SAP Logon"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"/>
    </Grid>
</Window>
